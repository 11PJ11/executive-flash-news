# Executive Flash News - Environment Configuration Template
# Copy this file to .env for local development

# =============================================================================
# FORGE CONFIGURATION
# =============================================================================

# Forge API Token (required for deployments)
# Get from: https://developer.atlassian.com/console/myapps/
FORGE_API_TOKEN=your_forge_api_token_here

# Forge User Email (for authentication)
FORGE_USER_EMAIL=your-email@company.com

# =============================================================================
# APPLICATION ENVIRONMENTS
# =============================================================================

# Development Environment
FORGE_DEV_APP_ID=your-dev-app-id
DEV_JIRA_SITE_URL=https://your-dev-site.atlassian.net

# Staging Environment
FORGE_STAGING_APP_ID=your-staging-app-id
STAGING_JIRA_SITE_URL=https://your-staging-site.atlassian.net

# Production Environment
FORGE_PROD_APP_ID=your-production-app-id
PROD_JIRA_SITE_URL=https://your-production-site.atlassian.net

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================

# Environment indicator (development, staging, production)
NODE_ENV=development

# CI/CD specific settings
CI_SKIP_TESTS=false
CI_DEPLOYMENT_TIMEOUT=1800
CI_BUILD_TIMEOUT=600

# =============================================================================
# QUALITY GATES CONFIGURATION
# =============================================================================

# Test Coverage Thresholds
COVERAGE_THRESHOLD_GLOBAL=50
COVERAGE_THRESHOLD_DOMAIN=80
COVERAGE_THRESHOLD_CRITICAL=90

# Performance Thresholds
BUILD_TIMEOUT_SECONDS=120
TEST_TIMEOUT_SECONDS=60
DEPLOY_TIMEOUT_SECONDS=300

# =============================================================================
# ATDD CONFIGURATION
# =============================================================================

# ATDD Compliance Settings
ATDD_ENFORCE_ONE_E2E=true
ATDD_REQUIRE_BDD_STYLE=true
ATDD_VALIDATE_GIVEN_WHEN_THEN=true

# Test Execution Settings
E2E_TEST_TIMEOUT=30000
INTEGRATION_TEST_TIMEOUT=15000
UNIT_TEST_TIMEOUT=5000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Audit Settings
AUDIT_LEVEL=moderate
SECURITY_SCAN_ENABLED=true

# Vulnerability Management
FAIL_ON_HIGH_VULNERABILITIES=true
FAIL_ON_CRITICAL_VULNERABILITIES=true

# =============================================================================
# NOTIFICATION CONFIGURATION (Optional)
# =============================================================================

# Slack Integration (optional)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#deployments

# Email Notifications (optional)
NOTIFICATION_EMAIL=team@company.com

# Teams Integration (optional)
TEAMS_WEBHOOK_URL=

# =============================================================================
# DEBUG AND LOGGING
# =============================================================================

# Debug Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
LOG_LEVEL=info

# Forge CLI Debug
FORGE_LOG_LEVEL=info
FORGE_DEBUG=false

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Hot Reload Settings (development only)
ENABLE_HOT_RELOAD=true
WATCH_MODE=true

# Development Server Settings
DEV_SERVER_PORT=3000
DEV_SERVER_HOST=localhost

# =============================================================================
# NOTES AND INSTRUCTIONS
# =============================================================================

# FORGE_API_TOKEN:
#   1. Go to https://developer.atlassian.com/console/myapps/
#   2. Create or select your app
#   3. Go to Settings > API tokens
#   4. Generate a new token
#   5. Copy the token here

# APP_IDs:
#   - Development: For feature branches and local testing
#   - Staging: For integration testing and demos
#   - Production: For live deployment

# SECURITY NOTES:
#   - Never commit .env files to version control
#   - Use different tokens for each environment
#   - Rotate tokens regularly
#   - Use GitHub Secrets for CI/CD environments

# JIRA SITES:
#   - Each environment should use a different Jira site
#   - Ensure proper permissions are configured
#   - Test sites should mirror production structure